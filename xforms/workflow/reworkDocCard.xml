<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events"
	xmlns:xf="http://www.w3.org/2002/xforms">
	<head>
		<xf:model id="xformId_mainModel">
			<xf:instance id="xformId_mainInstance" xmlns="">
				<schema xmlns="">
					<data/>
				</schema>
			</xf:instance>
			<xf:bind>
				<xf:bind ref="instance('xformId_mainInstance')/data/@newStatus" required="true()"/>
			</xf:bind>
		</xf:model>
	</head>

	<body>
		<!-- <xf:output value="serialize(instance('xformId_mainInstance'))"/> -->
		<xf:group ref="instance('xformId_mainInstance')/data[@type = 'add']">
			<xf:select1 ref="@approveValue" class="break baseInput200" appearance="full">
				<xf:itemset nodeset="../approves/approve">
					<xf:label ref="@label"/>
					<xf:value ref="@value"/>
				</xf:itemset>
				<xf:label>Операция</xf:label>
			</xf:select1>

			<xf:group ref=".[@docDescription!='']" class="break">
				<xf:output class="break baseInput400" ref="@docDescription">
					<xf:label>Описание документа</xf:label>
				</xf:output>
			</xf:group>

			<xf:textarea class="break baseInput400" ref="@comment">
				<xf:label>Комментарий</xf:label>
			</xf:textarea>

			<xf:group ref="docRefs[count(ref)&gt;0]" class="break">
				<xf:output value="'Ссылки документа'"/>
				<ul>
					<xf:repeat id="ref" nodeset="ref">
						<li>
							<a href="{@value}" target="_blank">
								<xf:output ref="@name"/>
							</a>
						</li>
					</xf:repeat>
				</ul>
			</xf:group>

			<div class="break button200">
				<xf:trigger>
					<xf:label>Сохранить</xf:label>
					<xf:action ev:event="DOMActivate">
						<xf:load
            resource="javascript:gwtXFormSave('xformId','1',  Writer.toString(getSubformInstanceDocument('xformId_mainModel', 'xformId_mainInstance')))">
						</xf:load>
					</xf:action>
				</xf:trigger>
			</div>
		</xf:group>
		<xf:group ref="instance('xformId_mainInstance')/data[@type = 'hide']">
			<div class="baseInput400 break">
				Утверждение задачи прошло успешно. Данную вкладку можно закрыть.
			</div>
		</xf:group>	
	</body>
</html>