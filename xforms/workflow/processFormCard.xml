<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events"
  xmlns:xf="http://www.w3.org/2002/xforms">
	<head>
		<xf:model id="xformId_mainModel">
			<xf:instance id="xformId_mainInstance" xmlns="">
				<schema xmlns="">
				</schema>
			</xf:instance>
			<xf:bind nodeset="instance('xformId_mainInstance')/data/@isStart"  required="true()" readonly="instance('xformId_mainInstance')/data/@startAdded = 'true'" type="boolean"/>
			<xf:bind nodeset="instance('xformId_mainInstance')/data/@name"  required="true()"/>
			<xf:bind nodeset="instance('xformId_mainInstance')/data/@link"  required="true()"/>
		</xf:model>
	</head>
	<body>
		     <!-- <xf:output value="serialize(instance('xformId_mainInstance'))"></xf:output>  -->
			
			<div  class="boolInput200 ">
				<xf:input ref="instance('xformId_mainInstance')/data/@isStart">
					<xf:label>Форма инициализации</xf:label>
				</xf:input>
			</div> 
	
			<div class="baseInput400 break" >
				<xf:input  ref="instance('xformId_mainInstance')/data/@name">
					<xf:label>Название формы:</xf:label>
				</xf:input>
			</div>
			<div class="baseInput400 break" >
				<xf:input  ref="instance('xformId_mainInstance')/data/@link">
					<xf:label>Ссылка:</xf:label>
				</xf:input>
			</div>
			<xf:group ref="instance('xformId_mainInstance')/data[@isStart='true']">
				<div  class="boolInput400 break">
						Для вставки переменной processKey напишите $[processKey]
				</div>
			</xf:group>
			<xf:group ref="instance('xformId_mainInstance')/data[@isStart='false']">
				<div  class="boolInput400 break">
						Для вставки переменной processId напишите $[processId]
				</div>
				<div  class="boolInput400 break">
						Для вставки переменной taskId напишите $[taskId]
				</div>
			</xf:group>
			<div class="button200 break">
				<xf:trigger>
					<xf:label>Сохранить</xf:label>
					<xf:action ev:event="DOMActivate">
						<xf:load
							resource="javascript:gwtXFormSave('xformId','1',  Writer.toString(getSubformInstanceDocument('xformId_mainModel', 'xformId_mainInstance')))"
						>
						</xf:load>
					</xf:action>
				</xf:trigger>
			</div>			

	</body>
</html>
