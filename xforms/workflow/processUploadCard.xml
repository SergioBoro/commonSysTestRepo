<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xsd="http://www.w3.org/2001/XMLschema" xmlns:fs="http://www.curs.ru/ns/FormServer"
    xmlns:xf="http://www.w3.org/2002/xforms">
	<head>
		<style type="text/css">
		</style>
		<xf:model id="xformId_mainModel">
			<xf:instance id="xformId_mainInstance" xmlns="">
				<schema xmlns="">
					<context nameId="" name="" dateFrom="" dateTo="" projectId="" project=""
                    />
				</schema>
			</xf:instance>
			<xf:instance id="xformId_test" xmlns="">
				<schema xmlns="">
					<context textInput="" simpleOutput="" selectorInput=""
                    boolInput="" numberInput="" select1="1"  textarea=""                 
                    dateInput="" textInput2="">
						<set>
							<item id="1" name="test1"/>
							<item id="2" name="test2"/>
							<item id="3" name="test3"/>
							<item id="4" name="test4"/>
						</set>

					</context>
				</schema>
			</xf:instance>
			<xf:bind>
				<xf:bind nodeset="instance('xformId_mainInstance')/files"  required="true()"/>

				<!--xf:bind nodeset="instance('xformId_test')//*"  readonly="true()"/-->

			</xf:bind>
		</xf:model>
	</head>
	<body>
	 <!-- <xf:output value="serialize(instance('xformId_mainInstance'))"/>  -->
		<div class="button200">
			<xf:upload id="xformId_processUpload" singleFile="true"  filenamesMapping="XPath(instance(quot(xformId_mainInstance))/files)" needClearFilenames="true" />
		</div>
		<table>
			<tr>
				<td width="250px">
					<div class="button200">
							<xf:trigger>
								<xf:label>Развернуть процесс</xf:label>
								<xf:action ev:event="DOMActivate"
									if="(is-valid(instance('xformId_mainInstance'))=false())">
									<xf:message>Не выбран файл</xf:message>
								</xf:action>
								<xf:action ev:event="DOMActivate"
									if="(is-valid(instance('xformId_mainInstance'))=true())">
									
								 	<xf:load
									resource="javascript:gwtXFormSave('xformId','1',  Writer.toString(getSubformInstanceDocument('xformId_mainModel', 'xformId_mainInstance')))"
								>
									</xf:load> 
								</xf:action>
							</xf:trigger>
					</div>
				</td>
				<td>
					<div class="button100">
						<xf:trigger >
							<xf:label>Закрыть</xf:label>
							<xf:action ev:event="DOMActivate">
								<xf:load resource="javascript:gwtXFormUpdate('xformId','1', null)"/>
							</xf:action>
						</xf:trigger>
					</div>
				</td>
			</tr>
		</table>
	</body>
</html>
