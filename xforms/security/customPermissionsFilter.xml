<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events"
  xmlns:xf="http://www.w3.org/2002/xforms">
  <head>
    <xf:model id="xformId_mainModel">
      <xf:instance id="xformId_mainInstance" xmlns="">
        <schema xmlns="">
          <permission type=""/>
        </schema>
      </xf:instance>
      <xf:bind>
        <xf:bind nodeset="instance('xformId_mainInstance')/permission/@type" readonly="true()"></xf:bind>
      </xf:bind>
    </xf:model>
  </head>
  <body>
    <!--<xf:output value="serialize(instance('xformId_mainInstance'))"></xf:output>-->
    <div class="selector">
      <div class="security selectorText">
        <xf:input class="author baseInput" ref="instance('xformId_mainInstance')/permission/@type">
          <xf:label>Тип разрешения:</xf:label>
        </xf:input>
      </div>
      <div class="security selectorButton">
        <xf:selector buttonLabel="..." procCount="'security.xform.customPermissions.customPermissionsTypesCount.celesta'"
          procList="'security.xform.customPermissions.customPermissionsTypesList.celesta'" generalFilters=""
          currentValue="''" windowCaption="'Выбор значения'"
          xpathMapping="{'XPath(instance(quot(xformId_mainInstance))/permission/@type)' : 'id'}"
        ></xf:selector>
      </div>
      <div class="security selectorButton">
        <xf:trigger>
          <xf:label>X</xf:label>
          <xf:action ev:event="DOMActivate">
            <xf:setvalue ref="instance('xformId_mainInstance')/permission/@type" value=""></xf:setvalue>
          </xf:action>
        </xf:trigger>
      </div>
    </div>
    <!--<xf:group ref="instance('xformId_mainInstance')/info[@name>'']">-->
    <div class="newbutton" style="width:150px;clear:both" >
      <xf:trigger class="blue">
        <xf:label>Отобразить</xf:label>
        <xf:action ev:event="DOMActivate">
          <xf:load
            resource="javascript:gwtXFormUpdate('xformId','11', null)"
          ></xf:load>
        </xf:action>
      </xf:trigger>
    </div>
    <!--</xf:group>-->
  </body>
</html>
