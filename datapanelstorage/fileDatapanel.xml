<?xml version="1.0" encoding="UTF-8"?>
<datapanel>
	<tab id="1" name="Таблица файлов">			
		<element id="fileGrid" type="grid" subtype="JS_LIVE_GRID" plugin="liveDGrid"
			proc="fileRepository.grids.fileGrid.gridData.celesta">
			<proc id="gridMetaFileGrid" name="fileRepository.grids.fileGrid.gridMeta.celesta"
				type="METADATA"/>
			<proc id="toolbarFiles" name="fileRepository.grids.fileGrid.gridToolBar.celesta" 
				type="TOOLBAR"/>
		</element>
		
		<element id="addFile" type="xforms" template="fileRepository/addFile.xml"
			proc="fileRepository.xforms.fileCard.cardData.celesta" neverShowInPanel="true">
			<proc id="cardSaveId" name="fileRepository.xforms.fileCard.cardDataSave.celesta" type="SAVE"/>
			<proc id="cardUploadId" name="fileRepository.xforms.fileCard.cardUpload.celesta" type="UPLOAD"/> 
			<related id="fileGrid"/>
		</element>		
		
		<element id="fileCardDelete" type="xforms" template="fileRepository/fileDeleteCard.xml"
			proc="fileRepository.xforms.fileCard.cardData.celesta" neverShowInPanel="true">
			<proc id="cardSaveId" name="fileRepository.xforms.fileCard.cardDataSave.celesta" type="SAVE"/>
			<related id="fileGrid"/>
		</element>
		
		<element id="fileCardDownload" type="xforms" template="fileRepository/fileDownloadCard.xml"
			proc="fileRepository.xforms.fileCard.cardData.celesta" neverShowInPanel="true">
			<proc id="cardSaveId" name="fileRepository.xforms.fileCard.cardDataSave.celesta" type="SAVE"/>
			<proc id="cardDownloadId" name="fileRepository.xforms.fileCard.cardDownload.celesta" type="DOWNLOAD"/>
			<related id="fileGrid"/>
		</element>
	</tab>
</datapanel>
